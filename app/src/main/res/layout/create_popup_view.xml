<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/create_popup"
        android:orientation="vertical"
        android:background="#FFA200"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

            <EditText
                android:id="@+id/project_name_field"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="@string/projectName"
                />

            <!--<EditText-->
                <!--android:id="@+id/dimension_field"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:hint="@string/dimension"-->
                <!--android:inputType="number"-->
            <!--/>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/close_popup"
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:layout_height="wrap_content"
                    android:text="@string/cancel"
                    />

                <Button
                    android:id="@+id/createActivity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/start"
                    />
            </LinearLayout>


    </LinearLayout>
